@{
    int count = 1;
}
<form class="paypalform" style="position:absolute; left:-3000px;" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
    <input type="hidden" name="cmd" value="_cart">
    <input type="hidden" name="currency_code" value="USD">
    <input type="hidden" name="upload" value="1" />

    @foreach (var item in Model)
    {
        <input type="hidden" name="item_name_@count" value="@item.ProductName" />
        <input type="hidden" name="amount_@count" value="@item.Price" />
        <input type="hidden" name="quantity_@count" value="@item.Quantity" />
        count++;
    }

    <input type="hidden" name="business" value="jultranet-facilitator@gmail.com">
    <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" alt="Make Payments
           with Paypal - it's fast, free and secure! " name="submit">
</form>